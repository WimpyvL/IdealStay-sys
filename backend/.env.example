# ==================================================
# IDEAL STAY V3 - BACKEND ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration (cPanel MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_cpanel_db_username
DB_PASSWORD=your_cpanel_db_password
DB_NAME=your_cpanel_db_name
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for user verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@idealstay.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp
UPLOAD_PATH=uploads

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Frontend URLs
FRONTEND_URL=http://localhost:5173
FRONTEND_RESET_PASSWORD_URL=http://localhost:5173/reset-password
FRONTEND_VERIFY_EMAIL_URL=http://localhost:5173/verify-email

# Production Database (cPanel)
# Uncomment and configure for production deployment
# PROD_DB_HOST=your_cpanel_server.com
# PROD_DB_USER=your_production_db_user
# PROD_DB_PASSWORD=your_production_db_password
# PROD_DB_NAME=your_production_db_name

# API Keys (for future integrations)
# PAYMENT_API_KEY=your_payment_provider_api_key
# MAPS_API_KEY=your_google_maps_api_key
# CLOUDINARY_CLOUD_NAME=your_cloudinary_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_secret

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# Cache Configuration (Redis - optional for future scaling)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Performance Monitoring
# SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ==================================================
# IMPORTANT NOTES:
# 1. Never commit the actual .env file to git
# 2. Update JWT_SECRET with a strong random string
# 3. Configure your cPanel database credentials
# 4. Set up email provider for user verification
# 5. Update CORS_ORIGIN for production deployment
# ==================================================