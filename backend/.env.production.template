# Server Configuration
NODE_ENV=production
PORT=3001
API_VERSION=v1

# JWT Configuration (IMPORTANT: Change these in production!)
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_KEY_CHANGE_THIS_IMMEDIATELY
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (cPanel MySQL)
DB_HOST=198.251.89.34
DB_PORT=3306
DB_USER=idealstayco_db
DB_PASSWORD=[~y13pu-,){^df!w
DB_NAME=idealstayco_db
DB_CONNECTION_LIMIT=20
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Email Configuration (Update with your SMTP settings)
EMAIL_HOST=smtp.your-domain.com
EMAIL_PORT=587
EMAIL_USER=noreply@your-domain.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@your-domain.com
EMAIL_SECURE=true

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,gif

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com,https://www.your-production-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Frontend URLs (Update with your domain)
FRONTEND_URL=https://your-production-domain.com
FRONTEND_RESET_PASSWORD_URL=https://your-production-domain.com/reset-password
FRONTEND_VERIFY_EMAIL_URL=https://your-production-domain.com/verify-email

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=logs/production.log

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=YOUR_PRODUCTION_SESSION_SECRET_CHANGE_THIS

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Payment Configuration (When implementing payment processing)
# PAYMENT_PROVIDER=your_payment_provider
# PAYMENT_SECRET_KEY=your_payment_secret_key
# PAYMENT_WEBHOOK_SECRET=your_webhook_secret

# Analytics Configuration (Optional)
# GOOGLE_ANALYTICS_ID=your_ga_id
# ANALYTICS_API_KEY=your_analytics_key

