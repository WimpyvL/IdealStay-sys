{
  "name": "idealstay-backend",
  "version": "1.0.0",
  "description": "Backend API for Ideal Stay V3 - Premium vacation rental platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "build:prod": "npm run lint && npm run test && npm run build",
    "start": "node dist/server.js",
    "start:file": "node start.js",
    "start:dev": "tsx src/server.ts",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "setup-db": "tsx src/utils/setup-database.ts",
    "test-db": "tsx -e \"import('./src/config/database.js').then(({connectDB}) => connectDB()).then(() => console.log('✅ Database OK')).catch(err => console.error('❌ Database Error:', err.message))\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "NODE_ENV=production npm test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "tsx src/utils/migrate.ts",
    "seed": "tsx src/utils/seed.ts",
    "import-schema": "tsx scripts/import-schema.ts",
    "create-admin": "tsx scripts/create-admin.ts",
    "deploy:check": "npm run build:prod && echo 'Ready for deployment'",
    "health:check": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [
    "vacation-rental",
    "booking-platform",
    "express",
    "typescript",
    "mysql",
    "jwt-auth"
  ],
  "author": "Ideal Stay Development Team",
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.8",
    "sharp": "^0.33.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/idealstay-backend"
  }
}
